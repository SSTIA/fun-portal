$nav-item-height = 50px
$nav-button-height = 35px

.nav
  background: #FFF
  box-shadow: 0 0 20px rgba(#000, 0.1)
  z-index: 2
  position: relative

.nav--slideout-trigger
  left: 0
  top: 0
  width: 100%
  position: relative
  display: none
  background: oc-cyan-5
  color: #FFF
  line-height: rem($nav-item-height)

  .nav__hamburger
    background: none
    border: 0
    border-radius: 0
    color: #FFF
    outline: 0

.nav__container
  display: flex
  justify-content: space-between
  flex-direction: row
  align-items: center

.nav__container-item
  display: flex
  justify-content: flex-start
  flex-direction: row
  align-items: center

.nav__logo
  &, &:visited, &:hover
    color: oc-teal-5
    text-decoration: none
    padding: rem(0 10px)

.nav__item
  display: inline-block
  line-height: rem($nav-item-height)
  padding: rem(0 10px)
  font-size: rem($font-size-secondary)
  position: relative
  transition: color .3s ease-out-cubic

  &:after
    display: block
    margin: 0 auto
    margin-top: rem(-3px)
    width: 0
    height: rem(3px)
    background: transparent
    content: ''
    transition: background-color .3s, width .3s
    transition-timing-function: ease-out-cubic

  &, &:visited, &:active
    color: oc-gray-5

  &:hover
    color: oc-gray-8
    text-decoration: none

    &:after
      background-color: oc-cyan-2
      width: 100%

  &.active
    color: oc-gray-9

    &:after
      background-color: oc-pink-4
      width: 100%

.nav__button
  display: inline-block
  line-height: rem($nav-button-height)
  padding: rem(0 30px)
  background: oc-blue-3
  border-radius: rem(($nav-button-height / 2))
  font-size: rem($font-size-secondary)
  transition: background-color .3s linear

  &, &:visited, &:hover
    color: #FFF
    text-decoration: none

  &:hover
    background-color: oc-blue-5

// For Mobile: show a slideout vertical arranged menu
+mobile()

  .nav
    z-index: 0
    box-shadow: 0

  .nav--slideout-trigger
    display: block

  .nav .columns
    padding: 0

  .nav.slideout-menu
    background: #1D1F20

  .nav__container, .nav__container-item
    flex-direction: column
    justify-content: flex-start
    align-items: stretch

  .nav__logo
    width: auto
    opacity: 1
    text-align: center
    display: block
    margin: rem(20px 0)

  .nav__item, .nav__button
    display: block
    line-height: rem($nav-item-height - 6)
    padding: rem(0 10px 3px 10px)
    border: 0
    border-left: 3px solid transparent
    margin: 0
    margin-bottom: rem(5px)
    border-radius: 0

    &, &:visited, &:active
      background: none !important
      color: #FFF !important

    &:hover
      background: rgba(#FFF, 0.10) !important
      color: #FFF !important

  .nav__item
    &:before
      left: -2px
      top: 0
      height: 100%
      width: 1px
